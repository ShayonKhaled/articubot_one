<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <link name="base_link">
    </link>
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.09 0 0" />
    </joint>
    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.03" rpy="0 0 0 " />
            <geometry>
                <box size="0.18 0.16 0.12" />
            </geometry>
            <material name="white" />

        </visual>
        <collision>
            <origin xyz="0 0 0.03" rpy="0 0 0 " />
            <geometry>
                <box size="0.18 0.16 0.12" />
            </geometry>
        </collision>

    </link>
    <!-- left wheel-->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="-0.08 0.08 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />

    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.025" radius="0.0325" />
            </geometry>
            <material name="blue" />
        </visual>


    </link>

    <!-- right wheel-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="-0.08 -0.08 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 -1" />

    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.025" radius="0.0325" />
            </geometry>
            <material name="blue" />
        </visual>
    </link>

    <!--front
    caster wheel-->
    <joint name="front_caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="front_caster_wheel" />
        <origin xyz="-0.08 0 -0.0325" rpy="0 0 0" />

    </joint>

    <link name="front_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0065" />

            </geometry>
            <material name="black" />
        </visual>
    </link>


    <!--back
    caster wheel-->
    <joint name="back_caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="back_caster_wheel" />
        <origin xyz="0.08 0 -0.0325" rpy="0 0 0" />

    </joint>

    <link name="back_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0065" />

            </geometry>
            <material name="black" />
        </visual>
    </link>
</robot>